<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ThirdFragment">

    <data>
        <variable
            name="user"
            type="com.example.multistepform.datamodels.User" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your address "
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/add1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_field"
            android:hint="Address line 1"
            android:text="@{user.address1}"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/heading" />

        <EditText
            android:id="@+id/add2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_field"
            android:hint="Address line 2"
            android:text="@{user.address2}"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/add1" />

        <EditText
            android:id="@+id/add3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_field"
            android:hint="Address line 3"
            android:text="@{user.address3}"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/add2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>